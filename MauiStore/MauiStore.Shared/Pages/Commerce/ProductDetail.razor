                </MudItem>
                <MudItem xs="6" md="6" lg="4">
                    <MudImage Src="/images/pictures/22m.jpg" Fluid="true" Class="rounded-lg" />
                    <MudText Typo="Typo.body2" Align="Align.Center" Class="mt-1">Cookie</MudText>
                </MudItem>
