<MudCard Elevation="1" Class="rounded-lg mt-5">
    <MudCardContent>
        <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">Testimonials</MudText>
        <MudText Typo="Typo.caption">Sharing feedback from our customers is always makes us happy.</MudText>
        <MudDivider Class="my-3"></MudDivider>
        <MudGrid Spacing="2">
            <MudItem xs="12" Class="d-flex align-content-center">
                <MudPaper Elevation="0" Class="ml-0 mr-auto">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">John Doe</MudText>
                    <MudText Typo="Typo.body2">The best support I have ever had. They are on top of things and with very fast and accurate replies.</MudText>
                </MudPaper>
                <MudPaper Elevation="0" Class="mx-1">
                    <MudText Typo="Typo.h6" Style="font-weight: 600; text-align: right" Color="Color.Error">5.0</MudText>
                    <MudRating ReadOnly="true" SelectedValue="5" />
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider Class="my-1"></MudDivider>
            </MudItem>

            <MudItem xs="12" Class="d-flex align-content-center">
                <MudPaper Elevation="0" Class="ml-0 mr-auto">
                    <MudText Typo="Typo.subtitle2" Style="font-weight: 600;">Louder Johanna</MudText>
                    <MudText Typo="Typo.body2">
                        I like the way it's setup, did had to do some research before I got to know how it works though.                        ..
                    </MudText>
                </MudPaper>
                <MudPaper Elevation="0" Class="mx-1">
                    <MudText Typo="Typo.h6" Style="font-weight: 600; text-align: right" Color="Color.Error">4.0</MudText>
                    <MudRating ReadOnly="true" SelectedValue="4" />
                </MudPaper>
            </MudItem>

            <MudItem lg="6" md="6" xs="6" xl="6">
                <MudButton FullWidth="true" Class="rounded-lg px-1" Size="Size.Medium" Variant="Variant.Filled" Color="Color.Info"  @onclick="@(() => NavigateToCheckout())">Purchase Now</MudButton>
            </MudItem>
            <MudItem lg="6" md="6" xs="6" xl="6">
                <MudButton FullWidth="true" Class="rounded-lg px-1" Size="Size.Medium" Variant="Variant.Filled" Color="Color.Primary" @onclick="@(() => NavigateToCartDetail())">Add To Cart</MudButton>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
@code {
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Shopping", href: "/shopping"),
            new BreadcrumbItem("Product Details", href: null, disabled: true)
        };
    protected override async Task OnInitializedAsync()
    {

    }

    public void NavigateToCheckout()
    {
        _navigationManager.NavigateTo("/shopping/cart/checkout");
    }

    public void NavigateToCartDetail()
    {
        _navigationManager.NavigateTo("/shopping/cart");
    }
}