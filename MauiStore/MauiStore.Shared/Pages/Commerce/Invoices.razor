                    <MudChip T="string" Class="px-2 ml-0 mr-2 align-self-center" Style="@($"color:{Colors.Shades.White}; background:{Theme.PaletteDark.SuccessLighten};")" Size="Size.Small">#0006</MudChip>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
