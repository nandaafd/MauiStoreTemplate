@code {
    public bool _loaded;
    protected override async Task OnInitializedAsync()
    {
        
        _loaded = true;
    }

    public void NavigateToCommerceIndexPage()
    {
        _navigationManager.NavigateTo("/commerce");
    }

    public void NavigateToWalletIndexPage()
    {
        _navigationManager.NavigateTo("/wallet");
    }
}