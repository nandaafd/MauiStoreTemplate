@page "/grocery/cart"

<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 py-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-0">

    </MudPaper>
</MudPaper>

<MudCard Elevation="1" Outlined="false" Class="mt-n7 rounded-lg">
    <MudCardContent>
        <MudGrid Class="mb-3">
            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="0" Class="d-flex flex-row justify-space-between  pa-0" Style="height:120px;">
                    <MudCardContent Class="pa-0">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="Color.Default">Oranges</MudText>
                        <MudText Typo="Typo.caption" Color="Color.Default">No Preservatives or Pesticide</MudText>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Primary">$23.99</MudText>
                    </MudCardContent>
                    <MudImage Src="/images/grocery/7s.jpg" Class="rounded-lg ml-1" Style="height: 100px; min-width: 100px; max-width: 100px; " />
                </MudCard>
                <MudGrid Spacing="1">
                    <MudItem xs="8">
                        <MudSelect T="string" Label="Options" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                            <MudSelectItem Value="@("Local Grown")" />
                            <MudSelectItem Value="@("EU Import")" />
                            <MudSelectItem Value="@("US")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="IntValue" Label="Q.ty" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="0" Class="d-flex flex-row justify-space-between  pa-0" Style="height:120px;">
                    <MudCardContent Class="pa-0">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="Color.Default">Organic Peppers</MudText>
                        <MudText Typo="Typo.caption" Color="Color.Default">No Preservatives or Pesticide</MudText>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Primary">$25.99</MudText>
                    </MudCardContent>
                    <MudImage Src="/images/grocery/9s.jpg" Class="rounded-lg ml-1" Style="height:100px; min-width: 100px; max-width:100px;" />
                </MudCard>
                <MudGrid Spacing="1">
                    <MudItem xs="8">
                        <MudSelect T="string" Label="Options" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                            <MudSelectItem Value="@("Local Grown")" />
                            <MudSelectItem Value="@("EU Import")" />
                            <MudSelectItem Value="@("US")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="IntValue" Label="Q.ty" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="0" Class="d-flex flex-row justify-space-between  pa-0" Style="height:120px;">
                    <MudCardContent Class="pa-0">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">USA Grapes</MudText>
                        <MudText Typo="Typo.caption" Color="Color.Default">No Preservatives or Pesticide</MudText>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Primary">$27.99</MudText>
                    </MudCardContent>
                    <MudImage Src="/images/grocery/4s.jpg" Class="rounded-lg ml-1" Style="height: 100px; min-width: 100px; max-width: 100px; " />
                </MudCard>
                <MudGrid Spacing="1">
                    <MudItem xs="8">
                        <MudSelect T="string" Label="Options" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                            <MudSelectItem Value="@("Local Grown")" />
                            <MudSelectItem Value="@("EU Import")" />
                            <MudSelectItem Value="@("US")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="IntValue" Label="Q.ty" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                    </MudItem>
                </MudGrid>
            </MudItem>

        </MudGrid>
    </MudCardContent>
</MudCard>

<MudPaper Elevation="0" Class="px-4 mx-n4 my-5 py-5 mud-theme-primary" Outlined="false" Square="true">
    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Align="Align.Center">Cart Summary</MudText>
    <MudText Typo="Typo.caption" Style="font-weight: 500;" Align="Align.Center">Taxes and Shipping will be added in Check Out screen</MudText>

    <MudCard Class=" my-5 rounded-lg">
        <MudCardContent>
            <MudGrid Spacing="2">
                <MudItem xs="12">
                    <div class="d-flex justify-space-between">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;">Delivery Fee</MudText>
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 600;">Free</MudText>
                    </div>
                </MudItem>
                <MudItem xs="12">
                    <div class="d-flex justify-space-between">
                        <MudText Typo="Typo.h6" Style="font-weight: 600;">Total</MudText>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Primary">$77.99</MudText>
                    </div>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2"></MudDivider>
                </MudItem>
                
                <MudItem xs="12">
                    <MudContainer Fixed="true" Class="px-0">
                        <MudButton FullWidth="true" Class="rounded-lg" Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Theme.PaletteDark.SuccessDarken};")" @onclick="@(() => NavigateToCheckout())">Proceed To Checkout</MudButton>
                    </MudContainer>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</MudPaper>
@code {
    protected override async Task OnInitializedAsync()
    {

    }

    public void NavigateToCheckout()
    {
        _navigationManager.NavigateTo("/grocery/checkout");
    }

    public MudTheme Theme = new MudTheme();

    public int IntValue { get; set; }
    public double DoubleValue { get; set; }
    public decimal DecimalValue { get; set; }
}