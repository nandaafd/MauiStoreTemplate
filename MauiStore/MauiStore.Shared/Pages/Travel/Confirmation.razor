@page "/travel/confirmation"

<MudPaper Elevation="0" Outlined="false" Square="true" Class="mx-n4">
    <!--Experience selected-->
    <MudCard Elevation="0" Class="d-flex px-4 py-5">
        <MudCardMedia Image="/images/travel/7.jpeg" Class="rounded-lg align-self-center" Style="height: 100px; min-width: 100px; max-width: 100px; " />
        <MudCardContent Class="px-3 py-0">
            <MudText Typo="Typo.caption" Class=""> Hoan Kiem - 3 hours </MudText>
            <MudText Typo="Typo.subtitle2" Class="mt-1 max-line-2" Color="Color.Default"> The Fammous Ha Giang Loop Adventure </MudText>
            <MudText Class="mt-1" Typo="Typo.caption" > Hosted in English and Vietnamese</MudText>
            <div class="d-flex mt-2">
                <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Error" Size="Size.Small" />
                <MudText Typo="Typo.body2" Class="align-self-center" Style="font-weight:500"> 4.96 <MudText Typo="Typo.body2" Style="font-weight:400" Inline="true"> (54) </MudText> </MudText> 
            </div>
        </MudCardContent>
    </MudCard>

    <MudPaper Elevation="0" Class="" Style="background-color: var(--mud-palette-background); height: 10px "></MudPaper>

    <!--Experience-->
    <MudPaper Elevation="0" Square="true" Class="px-4 py-5">
        <MudText Typo="Typo.h6" Class="" Style="font-weight:500"> Your experience </MudText>

        <MudText Typo="Typo.subtitle1" Class="mt-4" Style="font-weight:500"> Date </MudText>
        <MudText Typo="Typo.body2" Class="mt-1"> Tue, May 10 6:00 PM - 9:00 PM </MudText>

        <div class="d-flex justify-space-between mt-4">
            <MudText Typo="Typo.subtitle1" Class="" Style="font-weight:500"> Guests </MudText>
            <MudLink Typo="Typo.body1" Class="" Color="Color.Default" Underline="Underline.Always" Style="font-weight:500"> Edit </MudLink>
        </div>
        <MudText Typo="Typo.body2" Class="mt-1"> 1 adult </MudText>
    </MudPaper>

    <MudPaper Elevation="0" Class="" Style="background-color: var(--mud-palette-background); height: 10px "></MudPaper>

    <!--Price-->
    <MudPaper Elevation="0" Square="true" Class="px-4 py-5">
        <MudText Typo="Typo.h6" Class="" Style="font-weight:500"> Price details </MudText>

        <div class="d-flex justify-space-between mt-4">
            <MudText Typo="Typo.body2" Class="" Style=""> $26.13 x 1 adult </MudText>
            <MudText Typo="Typo.body2" Class="" Style=""> $26.13 </MudText>
        </div>

        <div class="d-flex justify-space-between mt-2">
            <MudText Typo="Typo.subtitle1" Class="" Style="font-weight:500"> Total (USD) </MudText>
            <MudText Typo="Typo.subtitle1" Class="" Style="font-weight:500"> $26.13 </MudText>
        </div>

        <div class="d-flex justify-end mt-4">
            <MudLink Typo="Typo.body1" Class="" Color="Color.Default" Underline="Underline.Always" Style="font-weight:500"> More info </MudLink>
        </div>
    </MudPaper>

    <MudPaper Elevation="0" Class="" Style="background-color: var(--mud-palette-background); height: 10px "></MudPaper>

    <!--Things to know-->
    <MudPaper Elevation="0" Square="true" Class="px-4 py-5">
        <MudText Typo="Typo.h6" Class="" Style="font-weight:500"> Things to know </MudText>

        <MudText Typo="Typo.subtitle1" Class="mt-4" Style="font-weight:500"> Guest requirements </MudText>
        <MudText Typo="Typo.body2" Class="" > Up to 6 guests of all ages can attend. </MudText>

        <div class="d-flex justify-end mt-4">
            <MudLink Typo="Typo.body1" Class="" Color="Color.Default" Underline="Underline.Always" Style="font-weight:500"> Learn more </MudLink>
        </div>
    </MudPaper>

    <MudPaper Elevation="0" Class="" Style="background-color: var(--mud-palette-background); height: 10px "></MudPaper>

    <!--Required info-->
    <MudPaper Elevation="0" Square="true" Class="px-4 py-5">
        <MudText Typo="Typo.h6" Class="" Style="font-weight:500"> Required for your trip </MudText>

        <div class="d-flex justify-space-between mt-4">
            <div>
                <MudText Typo="Typo.subtitle1" Class="" Style="font-weight:500"> Phone number </MudText>
                <MudText Typo="Typo.body2" Class="mt-2" > Add and confirm your phone number to get trip updates. </MudText>
            </div>
            <MudButton Variant="Variant.Outlined" Color="Color.Default" Class="align-self-start rounded-lg" > Add </MudButton>
        </div>

        <MudDivider Class="my-3"></MudDivider>

        <div class="d-flex justify-space-between mt-5">
            <MudText Typo="Typo.subtitle1" Class="" Style="font-weight:500"> Booking for work? </MudText>
            <MudSwitch @bind-Value="@workBooking" />
        </div>
    </MudPaper>

    <MudPaper Elevation="0" Class="" Style="background-color: var(--mud-palette-background); height: 10px "></MudPaper>

    <!--Payment-->
    <MudPaper Elevation="0" Square="true" Class="px-4 py-5">
        <MudText Typo="Typo.h6" Class="" Style="font-weight:500"> Pay with </MudText>

        <div class="d-flex justify-space-between mt-5">
            <MudText Typo="Typo.subtitle1" Class="" Style="font-weight:500"> Payment method </MudText>
            <MudButton Variant="Variant.Outlined" Color="Color.Default" Class="rounded-lg" > Add </MudButton>
        </div>
        <MudImage Src="/images/travel/payments.png" Height="15" Elevation="0"/>

        <MudDivider Class="my-3"></MudDivider>

        <MudLink Typo="Typo.body1" Class="" Color="Color.Default" Underline="Underline.Always" Style="font-weight:500"> Enter a coupon </MudLink>
    </MudPaper>

    <MudPaper Elevation="0" Class="" Style="background-color: var(--mud-palette-background); height: 10px "></MudPaper>

    <!--Cancellation policy-->
    <MudPaper Elevation="0" Square="true" Class="px-4 py-5">
        <MudText Typo="Typo.h6" Class="" Style="font-weight:500"> Cancellation policy </MudText>

        <MudText Typo="Typo.body2" Class="mt-3" Style="font-weight: 400;"> Get a full refund if you cancel by May 9, 6:00 PM (ICT). <MudLink Typo="Typo.body2" Style="font-weight: 500;" Underline="Underline.Always"> Learn more</MudLink> </MudText>
    </MudPaper>

    <MudPaper Elevation="0" Class="" Style="background-color: var(--mud-palette-background); height: 10px "></MudPaper>

    <MudPaper Elevation="0" Square="true" Class="px-4 py-5">
        <MudText Typo="Typo.caption" Class="" Style="font-weight: 400;"> By selecting the button below, you agree to the <strong>Cancellation Policy</strong>, the <strong>Guest Refund Policy</strong> and our <strong>Terms and Conditions</strong>.</MudText>
        <MudButton Class="mt-4 rounded-lg" Color="Color.Secondary" Variant="Variant.Filled" FullWidth="true" > Confirm and Pay </MudButton>
    </MudPaper>
</MudPaper>

@code {
    public bool workBooking { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {

    }
}