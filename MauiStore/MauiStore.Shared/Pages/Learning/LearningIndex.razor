            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Categories 2 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="1" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToCourseStyle1())">
