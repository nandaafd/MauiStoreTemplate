        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="1" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToCourseStyle3())">
            <MudIcon Icon="@Icons.Material.TwoTone.Checklist" Color="Color.Tertiary" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
