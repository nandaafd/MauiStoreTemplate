            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Home page 3 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="1" Class="d-flex flex-row rounded-lg" @onclick="@(() => NavigateToCategories1())">
            <MudIcon Icon="@Icons.Material.TwoTone.ViewList" Color="Color.Primary" Class="mx-3 my-5 align-self-center" Size="Size.Large"></MudIcon>
            <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Default"> Categories 1 </MudText>
            <MudIcon Icon="@Icons.Material.TwoTone.ArrowRight" Color="Color.Default" Class="mx-3 ml-auto align-self-center" Size="Size.Medium"></MudIcon>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
