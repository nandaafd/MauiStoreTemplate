@page "/shopping/cart/checkout"

<MudBreadcrumbs Items="_items"></MudBreadcrumbs>

<MudCard Class="rounded-lg">
    <MudCardContent>
        <MudGrid Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Order Summary</MudText>
                <MudText Typo="Typo.body2">Finished Shopping? Let's checkout! Remember, this is just a template! </MudText>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="0" Class="d-flex flex-row justify-space-between rounded-lg pa-0" Style="height:120px;">
                    <MudCardContent Class="pa-0">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">Designer Style Eyeglasses with UV protection.</MudText>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Default">$23.99</MudText>
                    </MudCardContent>
                    <MudCardMedia Image="/images/products/4.jpg" Class="rounded-lg ml-1" Style="height: 100px; min-width: 100px; max-width: 100px; " />
                </MudCard>
                <MudGrid Spacing="1">
                    <MudItem xs="8">
                        <MudSelect T="string" Label="Options" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                            <MudSelectItem Value="@("Green Color")" />
                            <MudSelectItem Value="@("Blue Coral")" />
                            <MudSelectItem Value="@("Black")" />
                            <MudSelectItem Value="@("Red")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="IntValue" Label="Q.ty" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="0" Class="d-flex flex-row justify-space-between rounded-lg pa-0" Style="height:120px;">
                    <MudCardContent Class="pa-0">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default" >Your awesome product description long or short. </MudText>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Default">$25.99</MudText>
                    </MudCardContent>
                    <MudCardMedia Image="/images/products/5.jpg" Class="rounded-lg ml-1" Style="height:100px; min-width: 100px; max-width:100px;" />
                </MudCard>
                <MudGrid Spacing="1">
                    <MudItem xs="8">
                        <MudSelect T="string" Label="Options" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                            <MudSelectItem Value="@("Green Color")" />
                            <MudSelectItem Value="@("Blue Coral")" />
                            <MudSelectItem Value="@("Black")" />
                            <MudSelectItem Value="@("Red")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="IntValue" Label="Q.ty" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudDivider></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="0" Class="d-flex flex-row justify-space-between rounded-lg pa-0" Style="height:120px;">
                    <MudCardContent Class="pa-0">
                        <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default" >Retro Camera with 24 rolls of film included.</MudText>
                        <MudText Typo="Typo.h6" Style="font-weight: 600;" Color="@Color.Default">$27.99</MudText>
                    </MudCardContent>
                    <MudCardMedia Image="/images/products/6.jpg" Class="rounded-lg ml-1" Style="height: 100px; min-width: 100px; max-width: 100px; " />
                </MudCard>
                <MudGrid Spacing="1">
                    <MudItem xs="8">
                        <MudSelect T="string" Label="Options" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                            <MudSelectItem Value="@("Green Color")" />
                            <MudSelectItem Value="@("Blue Coral")" />
                            <MudSelectItem Value="@("Black")" />
                            <MudSelectItem Value="@("Red")" />
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="IntValue" Label="Q.ty" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                    </MudItem>
                </MudGrid>
            </MudItem>

        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Class="rounded-lg mt-5">
    <MudCardContent>
        <MudGrid Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Payment Method</MudText>
                <MudText Typo="Typo.body2">Please select your payment method. This page is a dummy template.  </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudSelect T="string" Label="Payment type" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                    <MudSelectItem Value="@("Credit Card")" />
                    <MudSelectItem Value="@("Paypal")" />
                    <MudSelectItem Value="@("Payoneer")" />
                    <MudSelectItem Value="@("Strip")" />
                </MudSelect>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Class="rounded-lg mt-5">
    <MudCardContent>
        <MudGrid Spacing="1" Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Payment Details</MudText>
                <MudText Typo="Typo.body2">Please fill your payment detail. This page is a dummy template.   </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="CardHolderName" Label="Cardholder Name" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="CardNumber" Label="Card Number" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="7">
                <MudTextField @bind-Value="ValidThru" Label="Valid Thru" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="5">
                <MudTextField @bind-Value="CVV" Label="CVV" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Class="rounded-lg mt-5">
    <MudCardContent>
        <MudGrid Spacing="1" Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Invoice Details</MudText>
                <MudText Typo="Typo.body2">Let fill your invoice detail for contact info, shipping address ! </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="FirstName" Label="First Name" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="LastName" Label="Last Name" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="CompanyName" Label="Company Name" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudSelect T="string" Label="Country" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                    <MudSelectItem Value="@("Singapore")" />
                    <MudSelectItem Value="@("Malaysia")" />
                    <MudSelectItem Value="@("Vietnam")" />
                    <MudSelectItem Value="@("Philipine")" />
                </MudSelect>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="State" Label="State" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="Street" Label="Street Name" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="Apartment" Label="Apartment, Unit, Floor..." Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudPaper Elevation="0" Class="px-4 mx-n4 my-5 py-5 mud-theme-primary" Outlined="false" Square="true">
    <MudText Typo="Typo.h6" Style="font-weight: 600; text-align: center;">Submit Order</MudText>
    <MudText Typo="Typo.body2" Style="text-align: center;">After tapping the purchase button we'll immediately start processing your order </MudText>

    <MudCard Class="rounded-lg my-5">
        <MudCardContent>
            <MudGrid>
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 500;">Total</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 500; text-align: right;" Color="@Color.Default">$77.99</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 500;">Taxes</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 500; text-align: right;" Color="@Color.Default">$7.99</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 500;">Shipping</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 500; text-align: right;" Color="@Color.Success">$0</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="mb-3"></MudDivider>
                </MudItem>

                <MudItem xs="6">
                    <MudText Typo="Typo.h6" Style="font-weight: 600;">Grand Total</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.h6" Style="font-weight: 600; text-align: right;" Color="@Color.Error">$86.99</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="mb-3"></MudDivider>
                </MudItem>

                <MudItem xs="12">
                    <MudContainer Fixed="true" Class="px-0">
                        <MudButton FullWidth="true" Class="rounded-lg" Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White}; background:{Theme.PaletteDark.SuccessDarken};")">Purchase Now</MudButton>
                    </MudContainer>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</MudPaper>
@code {

    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Shopping", href: "/shopping"),
             new BreadcrumbItem("Cart", href: "/shopping/cart"),
            new BreadcrumbItem("Checkout", href: null, disabled: true)
        };
    protected override async Task OnInitializedAsync()
    {

    }

    public MudTheme Theme = new MudTheme();

    public int IntValue { get; set; } = 1;
    public double DoubleValue { get; set; }
    public decimal DecimalValue { get; set; }

    public string CardHolderName { get; set; }
    public string CardNumber { get; set; }
    public string ValidThru { get; set; }
    public string CVV { get; set; }

    public string FirstName { get; set; }
    public string LastName { get; set; }
    public string CompanyName { get; set; }
    public string State { get; set; }
    public string Street { get; set; }
    public string Apartment { get; set; }
}