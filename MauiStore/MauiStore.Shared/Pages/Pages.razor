                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">Fruits Grocery</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">8 template pages </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Material.TwoTone.ShoppingBasket" Color="Color.Info" Class="align-self-center fa-3x" Size="Size.Large"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="1" Class="px-3 py-5 d-flex flex-row justify-space-between" @onclick="@(() => NavigateToEducationIndexPage())">
