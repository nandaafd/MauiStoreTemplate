                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">E-Learning</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">9 template pages </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Material.TwoTone.Book" Color="Color.Error" Class="align-self-center fa-3x" Size="Size.Large" ></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="1" Class="px-3 py-5 d-flex flex-row justify-space-between" @onclick="@(() => NavigateToBlogIndexPage())">
                <MudPaper Elevation="0" Class="px-2 align-self-center">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">Blog/ News</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">8 template pages </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Material.TwoTone.Newspaper" Color="Color.Success" Class="align-self-center fa-3x" Size="Size.Large"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="1" Class="px-3 py-5 d-flex flex-row justify-space-between" @onclick="@(() => NavigateToProjectIndexPage())">
                <MudPaper Elevation="0" Class="px-2 align-self-center">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">Project/ Tasks</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">8 template pages </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Material.TwoTone.TaskAlt" Color="Color.Warning" Class="align-self-center fa-3x" Size="Size.Large"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="1" Class="px-3 py-5 d-flex flex-row justify-space-between" @onclick="@(() => NavigateToHealthIndexPage())">
                <MudPaper Elevation="0" Class="px-2 align-self-center">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">Socials Health</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">6 template pages </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Material.TwoTone.MedicalServices" Color="Color.Secondary" Class="align-self-center fa-3x" Size="Size.Large"></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="1" Class="px-3 py-5 d-flex flex-row justify-space-between" @onclick="@(() => NavigateToCommerceIndexPage())">
                <MudPaper Elevation="0" Class="px-2 align-self-center">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">E-Commerce</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">10 template pages </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Material.TwoTone.ShoppingCart" Color="Color.Error" Class="align-self-center fa-3x" Size="Size.Large" ></MudIcon>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="1" Class="px-3 py-5 d-flex flex-row justify-space-between" @onclick="@(() => NavigateToWalletIndexPage())">
                <MudPaper Elevation="0" Class="px-2 align-self-center">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">E-Wallet</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">10 template pages </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Material.TwoTone.AccountBalance" Color="Color.Primary" Class="align-self-center fa-3x" Size="Size.Large" ></MudIcon>
            </MudCard>
        </MudItem>

        @* <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="1" Class="px-3 py-5 d-flex justify-space-between " @onclick="@(() => NavigateToComponentsIndexPage())">
                <MudPaper Elevation="0" Class="px-2 align-self-center">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: 600;" Color="@Color.Default">Components</MudText>
                    <MudText Typo="Typo.body2" Style="font-weight: 300;" Color="@Color.Default" Class="">Awesome MudBlazor Components! </MudText>
                </MudPaper>
                <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Info" Class="align-self-center fa-3x" Size="Size.Large"></MudIcon>
            </MudCard>
        </MudItem> *@
    </MudGrid>
}

